{
  "name": "is-figma-url",
  "version": "1.0.2",
  "description": "Simple regex to check whether a string is a valid Figma live embed url",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:post",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:post": "node scripts/post-build.js",
    "test": "jest",
    "test:imports": "node scripts/test-imports.cjs && node scripts/test-imports.mjs",
    "prepublishOnly": "npm run build && npm test && npm run test:imports"
  },
  "keywords": [
    "figma",
    "figma-link",
    "figma-url",
    "figma-embed",
    "figma-live-embed"
  ],
  "author": "Florian Nagel <hi@floriannagel.xyz> (https://floriannagel.xyz/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nagelflorian/is-figma-url.git"
  },
  "bugs": {
    "url": "https://github.com/nagelflorian/is-figma-url/issues"
  },
  "homepage": "https://github.com/nagelflorian/is-figma-url#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
